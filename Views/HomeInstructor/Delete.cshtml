@model Course 

<h2>Delete Course</h2>

<p>Are you sure you want to delete this course?</p>

<div>
    <dl class="row">
        <dt class="col-sm-2">Course ID</dt>
        <dd class="col-sm-10">@Model.CourseID</dd>

        <!-- Add other properties of your 'Course' model as needed -->
    </dl>
</div>

<form asp-controller="HomeInstructor" asp-action="Delete" asp-route-id="@Model.CourseID" method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-controller="HomeInstructor" asp-action="CourseDetails" asp-route-id="@Model.CourseID" class="btn btn-secondary">Cancel</a>
</form>
